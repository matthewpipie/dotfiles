bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+grave workspace back_and_forth
bindsym $mod+Shift+grave move container to workspace back_and_forth
bindsym $mod+comma workspace prev
bindsym $mod+Shift+comma move container to workspace prev
bindsym $mod+period workspace next
bindsym $mod+Shift+period move container to workspace next
bindsym $mod+x exec i3-input -F "rename workspace to "'"'"$(~/.i3/cur_wksp.sh):%s"'"' -P 'Rename: '
bindsym $mod+Shift+x exec i3-msg "rename workspace to $(~/.i3/cur_wksp.sh)"
bindsym $mod+Tab focus output right
bindsym $mod+Shift+Tab move output right
bindsym $mod+Shift+equal workspace number 2; move workspace to output HDMI2; workspace number 3; move workspace to output HDMI2; workspace number 4; move workspace to output HDMI2; workspace number 5; move workspace to output HDMI2; workspace number 6; move workspace to output HDMI2; workspace number 7; move workspace to output HDMI2; workspace number 8; move workspace to output HDMI2; workspace number 9; move workspace to output HDMI2; workspace number 10; move workspace to output HDMI2; nop
bindsym $mod+equal move workspace to output left
bindsym $mod+z scratchpad show
bindsym $mod+Shift+z move scratchpad
bindsym $mod+Shift+c exec ~/.i3/i3bang.rb; reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'
bindsym Print exec maim $(date +'pictures/screenshot_%F_%T.png')
bindsym Mod1+Sys_Req exec maim -s $(date +'pictures/screenshot_%F_%T.png')
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer sset Master toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute exec amixer sset Capture toggle && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessUp exec xbacklight +10%
bindsym XF86MonBrightnessDown exec xbacklight -10%
bindsym XF86Explorer exec ~/.i3/layout-switcher
bindsym $mod+i exec i3lock -c 181818
bindsym $mod+n exec urxvt -name FLOAT --color0 '#383838' -e ssh nethack@nethack.alt.org
